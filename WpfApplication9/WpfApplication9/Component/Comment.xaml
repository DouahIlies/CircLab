<UserControl x:Class="WpfApplication9.Component.Comment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApplication9.Component"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             HorizontalAlignment="Left">
    <Grid x:Name="grid"
          Height="66"
          VerticalAlignment="Top">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Click="Delete"
                          Header="Supprimer"></MenuItem>
                <MenuItem Command="Paste"></MenuItem>
                <MenuItem Command="Delete"></MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <TextBlock x:Name="comment" />



    </Grid>
</UserControl>
